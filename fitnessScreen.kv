<FitnessScreen>:
    name: 'fit'
    exercise_name: ''
    MDBoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        MDLabel:
            text: "Exercise: " + root.exercise_name
            halign: 'center'
            font_style: 'H5'
        MDTextField:
            id: weight_input
            hint_text: "Enter the weight (lb)"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
        MDTextField:
            id: sets_input
            hint_text: "How many sets?"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
        MDTextField:
            id: reps_input
            hint_text: "How many reps per set?"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
        MDRaisedButton:
            text: "Log Exercise"
            size_hint_x: 0.8
            pos_hint: {'center_x': 0.5}
            on_release: root.log_exercise()
        MDIconButton:
            icon: "arrow-expand-left"
            md_bg_color: 0,0,0,1
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {"center_x": 0.15, "center_y": 0.08}
            on_release:
                root.loadHomeScreen()